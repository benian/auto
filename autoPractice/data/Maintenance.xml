  <testsuite name="Upgrading the Firmware">
    <testcase name="Upgrade from 2.1 to 2.3">
      <summary/>
      <steps>
        <step>
          <step_number>1</step_number>
          <actions>Pre-Conditions
1. A valid firmware file for uploading
2. Modify version of uc8100-mxcloud-cg to 2.1.0-1 in /var/lib/dpkg/status</actions>
          <expecteresults/>
        </step>
        <step>
          <step_number>2</step_number>
          <actions>Given home page</actions>
          <expecteresults/>
        </step>
        <step>
          <step_number>3</step_number>
          <actions>When Click Upgrade Firmware</actions>
          <expecteresults/>
        </step>
        <step>
          <step_number>4</step_number>
          <actions>And Select the firmware file</actions>
          <expecteresults/>
        </step>
        <step>
          <step_number>5</step_number>
          <actions>And Waiting about 10 minutes for upgrading</actions>
          <expecteresults/>
        </step>
        <step>
          <step_number>6</step_number>
          <actions>Then SD LED blinks during firmware upgrading</actions>
          <expecteresults/>
        </step>
        <step>
          <step_number>7</step_number>
          <actions>And Version changes to new FW Version after rebooting</actions>
          <expecteresults/>
        </step>
      </steps>
    </testcase>
